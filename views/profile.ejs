<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles.css">
    <title>Registration</title>
  </head>
    <body>
        <header>
            <nav class="navbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/dashboard" class="nav-link">Dashboard</a>
                    </li>
                    <li class="nav-item" >
                        <a href="/profile" class="nav-link">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a href="/auth/logout" class="nav-link">Logout</a>
                    </li>
                </ul>
                <% if (showSearchForm) { %>
                <form class="dashboard-form" id="dashboard-form">
                    <input type="text" id="search" placeholder="Search" class="search">
                </form>
                <% } %>
            </nav>
        </header>
        <div class="container-fluid">
            <form class="form-shared register-form" action="/profile/update" method="POST">
                <h4 class="text-center">Profile Settings</h4>
                <div class="mb-3 mt-5">
                    <input type="text" name="name" value="<%= typeof name != 'undefined' ? name: '' %>" id="form3Example1cg" class="form-control form-control-lg" required/>
                    <label class="form-label" for="form3Example1cg">Name</label>
                </div>
                <div class="mb-3">
                    <input type="email" name="email" value="<%= typeof email != 'undefined' ? email: '' %>" id="form3Example3cg" class="form-control form-control-lg" required/>
                    <label class="form-label" for="form3Example3cg">Your Email</label>
                </div>
                <div class="form-outline mb-4">
                    <input type="password" name="password" id="form3Example4cg" class="form-control form-control-lg" required/>
                    <label class="form-label" for="form3Example4cg">Password</label>
                </div>
                <div class="form-outline mb-4">
                    <input type="password" name="passwordConfirm" id="form3Example4cdg" class="form-control form-control-lg" required/>
                    <label class="form-label" for="form3Example4cdg">Repeat your password</label>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Update data</button>
                </div>
                    <p class="text-center text-muted mt-5 mb-0">You want to delete your account?<a href="/register"
                    class="fw-bold text-body"><u>Delete account!</u></a></p>
                    <% if (message) { %>
                        <div class="d-flex justify-content-center mt-3" id="message-container">
                            <div class="alert alert-danger w-100 text-center" role="alert">
                                <%= message %>
                            </div>
                        </div>
                    <% } %>
            </form>
        </div>
    </body>
    <footer class="footer">
        <div class="container">
            <span>&copy; 2024 moviefy. All rights reserved.</span>
        </div>
    </footer>
</html>